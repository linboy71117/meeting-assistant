{
  "manifest_version": 3,
  "name": "AI Meeting Assistant",
  "version": "1.0.0",
  "description": "幫助與會者開口、設計會議流程的 AI Meeting 工具。",
  "permissions": ["tabs", "scripting"],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://meet-assistant-backend.daxuerdeasthsinchu.dpdns.org/*"
  ],

  "action": {
    "default_title": "AI Meeting Assistant"
  },
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "assets/*"
      ],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}